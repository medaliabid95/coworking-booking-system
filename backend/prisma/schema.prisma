model Room {
  id        String   @id @default(uuid())
  name      String
  type      RoomType
  capacity  Int
  premium   Boolean  @default(false)
  bookings  Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  userId    String
  roomId    String
  date      DateTime
  status    BookingStatus @default(PENDING)
  room      Room     @relation(fields: [roomId], references: [id])
}

model User {
  id        String   @id
  email     String   @unique
  fullname  String
  membership MembershipType
}

enum RoomType {
  SMALL
  MEDIUM
  LARGE
}

enum MembershipType {
  REGULAR
  PREMIUM
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELED
}
